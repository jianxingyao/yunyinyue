/* pages/recommendSong/recommendSong.wxss */
.headerBox{
    position: relative;
    width: 100%;
    height: 300rpx;

}
.headerBox .headerImage{
    width: 100%;
    height: 100%;
}
.headerBox .dataTextBox{
    position: absolute;
    text-align: center;


    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}
.headerBox .dataTextBox .day{
    font-size: 45rpx;
}


.centerContainer{
    position: relative;
    top: -20rpx;
    border-radius: 30rpx;
    padding: 0 30rpx;
    background-color: white;
    height: 80rpx;
}
.centerContainer .playAllBox{
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
}
.centerContainer .playAllBox .more{
    float: right;
}


.listScroll{
    height: calc(100vh - 380rpx);
}

.listItem{
    display: flex;
    flex-direction: row;
    height: 80rpx;
    margin-top: 20rpx;
}
.listItem .info{
    display: flex;
    flex-direction: column;
    max-width: 400rpx;
    margin-left: 30rpx;
}
.listItem text{
    height: 80rpx;
    font-size: 30rpx;
    position: relative;

    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.listItem .image{
    height: 80rpx;
    width: 80rpx;
}
.listItem .image image{
    width: 100%;
    height: 100%;
}
.listItem .more{
    height: 80rpx;
    line-height: 80rpx;
    position: absolute;
    right: 0;
}
.listItem .more text{
    font-size: 50rpx;
}